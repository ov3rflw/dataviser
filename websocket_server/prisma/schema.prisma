generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int       @id @default(autoincrement())
  lastName       String
  firstName      String
  email          String?   @unique
  emailVerified  DateTime?
  hashedPassword String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

model Message {
  id         Int      @id @default(autoincrement())
  senderId   Int
  receiverId Int
  content    String
  createdAt  DateTime @default(now())
}

model Alert {
  id          Int      @id @default(autoincrement())
  srcIp       String
  alertType   String
  description String
  timestamp   DateTime
  ip          IP       @relation(fields: [srcIp], references: [ip], name: "AlertOnIP")
}

model IP {
  ip          String     @id
  hostname    String?
  netbiosName String?
  alerts      Alert[]    @relation(name: "AlertOnIP")
  detections  Detection[] @relation(name: "DetectionOnIP")
}

model Detection {
  id            Int      @id @default(autoincrement())
  srcIp         String
  detectionType String
  packetCount   Int
  threshold     Int
  timestamp     DateTime
  ip            IP       @relation(fields: [srcIp], references: [ip], name: "DetectionOnIP")
}

model Log {
  id        Int      @id @default(autoincrement())
  level     String
  message   String
  category  String?
  ip        String?
  timestamp DateTime
}